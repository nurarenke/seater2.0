<h1>Create Event</h1>

<%= form_for([@current_user, @event]) do |f| %>
  <p>
    <%= f.label :event_name %><br/>
    <%= f.text_field :event_name %>
  </p>
  <p>
    <%= f.label :event_description %><br/>
    <%= f.text_area :event_description, cols: 40, rows: 5 %>
  </p>
  <p>
    <%= f.label :location %><br/>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date %><br/>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>