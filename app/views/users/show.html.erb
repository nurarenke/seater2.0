<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>
</article>
<div>
	<%= link_to 'Your Events', user_events_path(@user) %>
</div>
<footer>
	<nav>
		<%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
		<%= link_to 'Delete Account', @user, 
								 method: :delete,
								 data: { confirm: 'Are you sure you want to permanently delete your account?' },
								 class: 'button' %>
	</nav>
</footer>